<Page
    x:Class="BatteryTracker.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:BatteryTracker.Helpers"
    xmlns:controls="using:BatteryTracker.Controls"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0 0 36 0">
        <StackPanel Orientation="Vertical" ChildrenTransitions="{StaticResource SettingsCardsAnimations}">
            <!--Version-->
            <controls:SettingsGroup x:Uid="Settings_Version" Margin="0 -24 0 0">
                <!-- App version -->
                <labs:SettingsCard
                    Header="Battery Tracker"
                    HeaderIcon="{ui:FontIcon FontFamily={StaticResource SymbolThemeFontFamily}, Glyph=&#xE946;}"
                    IsEnabled="True">
                    <labs:SettingsCard.Description>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{x:Bind ViewModel.VersionDescription}" />
                            <TextBlock Text="|" />
                            <TextBlock x:Uid="Settings_AboutDescription" />
                        </StackPanel>
                    </labs:SettingsCard.Description>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Spacing="8">
                        <TextBlock x:Uid="Settings_VersionCopiedTextBlock"
                                   VerticalAlignment="Center"
                                   Visibility="{x:Bind ViewModel.ShowCopiedMessage, Mode=OneWay}" />
                        <DropDownButton x:Uid="Settings_CopyVersionButton">
                            <DropDownButton.Flyout>
                                <MenuFlyout Placement="Bottom">
                                    <MenuFlyoutItem x:Uid="Settings_CopyAppVersionMenuItem"
                                                    Command="{x:Bind ViewModel.CopyAppVersionCommand}" />
                                    <MenuFlyoutItem x:Uid="Settings_CopyWindowsVersionMenuItem"
                                                    Command="{x:Bind ViewModel.CopyWindowsVersionCommand}" />
                                </MenuFlyout>
                            </DropDownButton.Flyout>
                        </DropDownButton>
                    </StackPanel>
                </labs:SettingsCard>
            </controls:SettingsGroup>

            <!-- Help and support -->
            <controls:SettingsGroup
                x:Uid="Settings_Help_Support"
                IsEnabled="True">
                <!-- Feedback -->
                <labs:SettingsCard
                    x:Uid="Settings_Feedback"
                    HeaderIcon="{ui:FontIcon FontFamily={StaticResource SymbolThemeFontFamily}, Glyph=&#xED15;}">
                    <labs:SettingsCard.Description>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Spacing="2">
                            <HyperlinkButton x:Uid="SettingsPage_GitHubIssuesLink"
                                             NavigateUri="https://github.com/myfix16/BatteryTracker/issues/new/choose" />
                            <TextBlock Text="|" />
                            <HyperlinkButton x:Uid="SettingsPage_EmailLink"
                                             Click="EmailFeedbackHyperlinkButton_Click" />
                            <TextBlock Text="|" />
                            <HyperlinkButton x:Uid="SettingsPage_RateTheApp"
                                             Click="RateTheAppHyperlinkButton_Click" />
                        </StackPanel>
                    </labs:SettingsCard.Description>
                </labs:SettingsCard>

                <!-- Logs -->
                <labs:SettingsCard
                    x:Uid="Settings_Logs"
                    HeaderIcon="{ui:FontIcon FontFamily={StaticResource SymbolThemeFontFamily}, Glyph=&#xED25;}"
                    ActionIcon="{ui:FontIcon FontFamily={StaticResource SymbolThemeFontFamily}, FontSize=14, Glyph=&#xE8A7;}"
                    Command="{x:Bind ViewModel.OpenLogFolderCommand}"
                    IsClickEnabled="True">
                </labs:SettingsCard>
            </controls:SettingsGroup>

            <!-- Open source -->
            <controls:SettingsGroup
                x:Uid="Settings_OpenSource"
                IsEnabled="True">
                <!-- GitHub link -->
                <labs:SettingsCard
                    x:Uid="Settings_GitHubLink"
                    HeaderIcon="{ui:FontIcon FontFamily={StaticResource SymbolThemeFontFamily}, Glyph=&#xE774;}"
                    ActionIcon="{ui:FontIcon FontFamily={StaticResource SymbolThemeFontFamily}, FontSize=14, Glyph=&#xE8A7;}"
                    Command="{x:Bind ViewModel.OpenGitHubRepoCommand}"
                    IsClickEnabled="True">
                </labs:SettingsCard>

                <!-- Privacy statement -->
                <labs:SettingsCard
                    x:Uid="Settings_PrivacyTerms"
                    HeaderIcon="{ui:FontIcon FontFamily={StaticResource SymbolThemeFontFamily}, Glyph=&#xE72E;}"
                    ActionIcon="{ui:FontIcon FontFamily={StaticResource SymbolThemeFontFamily}, FontSize=14, Glyph=&#xE8A7;}"
                    Command="{x:Bind ViewModel.OpenPrivacyStatementCommand}"
                    IsClickEnabled="True">
                </labs:SettingsCard>
            </controls:SettingsGroup>

            <!-- Third party licenses -->
            <labs:SettingsExpander
                x:Uid="Settings_ThirdPartyLicense"
                HeaderIcon="{ui:FontIcon FontFamily={StaticResource SymbolThemeFontFamily}, Glyph=&#xE90F;}"
                IsExpanded="False">
                <labs:SettingsExpander.Items>
                    <labs:SettingsCard HorizontalAlignment="Stretch" FlowDirection="RightToLeft">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <HyperlinkButton Content="H.NotifyIcon"
                                             NavigateUri="https://github.com/HavenDV/H.NotifyIcon/blob/master/LICENSE.md"
                                             ToolTipService.ToolTip="https://github.com/HavenDV/H.NotifyIcon/blob/master/LICENSE.md" />
                            <HyperlinkButton Content="Windows Community Toolkit"
                                             NavigateUri="https://github.com/CommunityToolkit/WindowsCommunityToolkit/blob/main/License.md"
                                             ToolTipService.ToolTip="https://github.com/CommunityToolkit/WindowsCommunityToolkit/blob/main/License.md" />
                            <HyperlinkButton Content="WinUIEx"
                                             NavigateUri="https://github.com/dotMorten/WinUIEx/blob/main/LICENSE"
                                             ToolTipService.ToolTip="https://github.com/dotMorten/WinUIEx/blob/main/LICENSE" />
                        </StackPanel>
                    </labs:SettingsCard>
                </labs:SettingsExpander.Items>
            </labs:SettingsExpander>

        </StackPanel>
    </ScrollViewer>
</Page>