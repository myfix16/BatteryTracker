<?xml version="1.0" encoding="utf-8" ?>
<winUiEx:WindowEx
    x:Class="BatteryTracker.Views.BatteryInfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BatteryTracker.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winUiEx="using:WinUIEx"
    Width="500" Height="600"
    IsTitleBarVisible="True"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid
        Margin="20 20 20 20"
        ColumnDefinitions="200, Auto, *" RowDefinitions="30, 30, 30, *">
        <TextBlock
            Grid.Row="0" Grid.Column="0"
            Text="Charge Percent:" />
        <TextBlock
            Grid.Row="0" Grid.Column="1"
            Text="{x:Bind ViewModel.ChargePercent, Mode=OneWay}" />

        <TextBlock
            Grid.Row="1" Grid.Column="0"
            Text="Battery Status:" />
        <TextBlock
            Grid.Row="1" Grid.Column="1"
            Text="{x:Bind ViewModel.BatteryStatus, Mode=OneWay}" />

        <TextBlock
            Grid.Row="2" Grid.Column="0"
            Text="Power Supply Status:" />
        <TextBlock
            Grid.Row="2" Grid.Column="1"
            Text="{x:Bind ViewModel.PowerSupplyStatus, Mode=OneWay}" />
    </Grid>
</winUiEx:WindowEx>
